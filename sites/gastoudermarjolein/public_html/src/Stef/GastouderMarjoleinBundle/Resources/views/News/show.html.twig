{% extends 'StefGastouderMarjoleinBundle::freelayout.html.twig' %}

{% block htmlbody %}
    <div class="container">
        <div class="row">
            <div class="index-slider">
                <div id="owl-demo" class="owl-carousel owl-theme">
                    <div class="item"><img src="/assets/img/masthead/haru1.jpg" alt="Spelen met Winey the Pooh"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="container pt">
        <div class="row mt">
            <div class="col-lg-12">
                <h1 class="page-title">{{ page.title }}</h1>
                <span>Het dagelijkse nieuws van {{ page.created|date("d/m/Y") }}</span>
            </div>
        </div>

        <div class="row mt">
            <div class="col-lg-12">
                {{ page.body|raw }}
            </div>
        </div>

    </div>

{% endblock %}